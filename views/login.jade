extends layout

link(href='../stylesheets/bootstrap.css', rel='stylesheet')

block content
  h2.page-header Login
  form(method='post', action='/users/register')
    .form-group
     label Company name
     input.form-control(name='name', type='text', placeholder='Enter company name')
    .form-group
     label Password
     input.form-control(name='password', type='text', placeholder='Enter password')

    input.btn.btn-primary(type= 'submit', name='submit', value ='Login') 